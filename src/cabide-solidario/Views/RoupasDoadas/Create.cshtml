@model cabide_solidario.Models.RoupaDoada

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<h1>Cadastre um novo item</h1>

<h4>Roupa Doada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeItem" class="control-label"></label>
                <input asp-for="NomeItem" class="form-control" />
                <span asp-validation-for="NomeItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doador" class="control-label"></label>
                <input asp-for="Doador" class="form-control" />
                <span asp-validation-for="Doador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tamanho" class="control-label"></label>
                <select asp-for="Tamanho" class="form-control" asp-items="Html.GetEnumSelectList<Tamanho>()"></select>
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-control" asp-items="Html.GetEnumSelectList<Genero>()"></select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-info mt-2">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-success mt-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
