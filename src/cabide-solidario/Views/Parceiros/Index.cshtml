@model IEnumerable<cabide_solidario.Models.Parceiro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<h1>Lista de Parceiros</h1>

<div class="table-responsive" id="no-more-tables">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeEmpresa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Nome Empresa">
                        @Html.DisplayFor(modelItem => item.NomeEmpresa)
                    </td>
                    <td data-title="Email">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td data-title="Telefone">
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td class="DbButton">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

