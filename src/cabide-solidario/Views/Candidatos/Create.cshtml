@model cabide_solidario.Models.Candidato

@{
    ViewData["Title"] = "Create";
}

<h1>Seja bem vindo(a) ao Cabide Solidário</h1>

<h4>Preencha os campos abaixo para que possamos registrar a sua candidatura:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disponibilidade" class="control-label"></label>
                <input asp-for="Disponibilidade" class="form-control" />
                <span asp-validation-for="Disponibilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto_Motivacao" class="control-label"></label>
                <input asp-for="Texto_Motivacao" class="form-control" />
                <span asp-validation-for="Texto_Motivacao" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-info">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
